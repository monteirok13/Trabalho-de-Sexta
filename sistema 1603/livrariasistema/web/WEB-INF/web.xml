<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>br.com.livraria.servlet.LivrariaSevletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>CadastrarUsuario</servlet-name>
        <servlet-class>br.com.livraria.servlet.CadastrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarLivros</servlet-name>
        <servlet-class>br.com.livraria.entity.CadastrarLivros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Livro</servlet-name>
        <servlet-class>br.com.livraria.entity.Livro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarLivro</servlet-name>
        <servlet-class>br.com.livraria.servlet.CadastrarLivro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarLivros</servlet-name>
        <servlet-class>br.com.livraria.servlet.ConsultarLivros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RealizarLogin</servlet-name>
        <servlet-class>br.com.livraria.servlet.RealizarLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>efetuarPedido</servlet-name>
        <servlet-class>br.com.livraria.servlet.efetuarPedido</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>efetuarPagamento</servlet-name>
        <servlet-class>br.com.livraria.servlet.efetuarPagamento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarCliente</servlet-name>
        <servlet-class>br.com.livraria.servlet.CadastrarCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrarUsuario</servlet-name>
        <url-pattern>/CadastrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarLivros</servlet-name>
        <url-pattern>/CadastrarLivros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Livro</servlet-name>
        <url-pattern>/Livro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarLivro</servlet-name>
        <url-pattern>/CadastrarLivro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarLivros</servlet-name>
        <url-pattern>/ConsultarLivros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RealizarLogin</servlet-name>
        <url-pattern>/RealizarLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>efetuarPedido</servlet-name>
        <url-pattern>/efetuarPedido</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>efetuarPagamento</servlet-name>
        <url-pattern>/efetuarPagamento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarCliente</servlet-name>
        <url-pattern>/CadastrarCliente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>
